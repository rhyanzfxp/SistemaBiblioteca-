<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.UniforLibrary" parent="Theme.Material3.DayNight.NoActionBar">
    </style>




    <style name="QuickActionButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="QuickActionButtonIconStyle">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="QuickActionButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelMedium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>