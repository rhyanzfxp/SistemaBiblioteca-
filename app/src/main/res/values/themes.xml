<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.UniforLibrary" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="ThemeOverlay.Unifor" />
    <style name="ThemeOverlay" />

    <style name="ThemeOverlay.Unifor.HighContrast">
        <item name="colorOnBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="ThemeOverlay.Unifor.Dyslexic" />

    <style name="TextButton" parent="Widget.Material3.Button.TextButton" />

    <style name="TextButton.Link" parent="TextButton">
        <item name="android:textColor">#7EE787</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">#3364FFDA</item>
    </style>

    <!-- CHIP utilizado na área de ações rápidas -->
    <style name="Widget.Lib.Chip" parent="@android:style/Widget.TextView">
        <!-- largura/altura obrigatórias -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

        <item name="android:textColor">@color/lib_text_primary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/shape_chip_bg</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="InputFilled.Dark" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="android:textColorHint">#B3FFFFFF</item>
        <item name="hintTextColor">#B3FFFFFF</item>
        <item name="boxBackgroundColor">#1F2937</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="endIconTint">#FFFFFFFF</item>
        <item name="startIconTint">#FFFFFFFF</item>
    </style>

    <style name="QuickActionButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="QuickActionButtonIconStyle">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="QuickActionButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelMedium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>
