<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/lib_surface">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/shape_logo_circle"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_marginTop="8dp"
            android:text="Chatbot da Biblioteca"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/lib_text_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Acervo • Prazos • Uso do app"
            android:textSize="12sp"
            android:textColor="@color/lib_text_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/chipPrazo"
                style="@style/Widget.Lib.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver prazos"/>

            <TextView
                android:id="@+id/chipBuscar"
                style="@style/Widget.Lib.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar livro"/>

            <TextView
                android:id="@+id/chipComoUsar"
                style="@style/Widget.Lib.Chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Como usar o app"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Lista de mensagens -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:fadingEdgeLength="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Barra de envio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escreva sua mensagem…">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/shape_send_button"
            android:backgroundTint="@color/lib_secondary"
            android:src="@drawable/ic_send_24"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

</LinearLayout>
