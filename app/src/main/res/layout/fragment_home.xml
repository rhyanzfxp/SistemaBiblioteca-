<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lib_surface"
    tools:context=".main.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="112dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_header_gradient">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:background="@color/lib_surface"
                        app:shapeAppearanceOverlay="@style/CircleImage"
                        app:strokeColor="@color/lib_primary"
                        app:strokeWidth="2dp"
                        android:contentDescription="@null"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/tvAppName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unifor Library"
                            android:textColor="@color/lib_white"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/tvWelcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Olá, Usuário."
                            android:textColor="@color/lib_white"/>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp">

                        <ImageButton
                            android:id="@+id/btnTopAction"
                            style="?attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:contentDescription="@string/cd_notifications"
                            app:tint="@color/lib_white"
                            android:src="@drawable/ic_notifications"/>

                        <View
                            android:id="@+id/badgeBell"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="end|top"
                            android:translationX="-6dp"
                            android:translationY="6dp"
                            android:background="@drawable/badge_dot_red"
                            android:visibility="gone"/>
                    </FrameLayout>

                </LinearLayout>
            </FrameLayout>


            <LinearLayout
                android:id="@+id/searchBar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="-26dp"
                android:background="@drawable/bg_search_rounded"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:elevation="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="@color/lib_secondary"
                    android:src="@drawable/ic_search"/>

                <EditText
                    android:id="@+id/inputSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Pesquisar livro por título, autor..."
                    android:background="@android:color/transparent"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/contentPanel"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_panel_round_top"
                android:paddingTop="24dp"
                android:paddingBottom="16dp"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp">


                <LinearLayout
                    android:id="@+id/rowChips"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:weightSum="2">

                    <include
                        android:id="@+id/chipEmprestimos"
                        layout="@layout/view_chip_action"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"/>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="0dp" />

                    <include
                        android:id="@+id/chipRenovar"
                        layout="@layout/view_chip_action"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recomendados"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/lib_text_primary"
                    android:layout_marginTop="18dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecommended"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_book_horizontal"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mais Emprestados"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/lib_text_primary"
                    android:layout_marginTop="18dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTopBorrowed"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="8dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_book_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabChatbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_chatbot"
        android:contentDescription="@string/label_chatbot"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="96dp"
        android:icon="@drawable/ic_chat"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
