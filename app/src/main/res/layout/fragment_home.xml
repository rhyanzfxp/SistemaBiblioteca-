<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bem-vindo(a)!"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etQuickSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Buscar livro por título, autor..."
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:focusable="false"
        android:clickable="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvQuickActionsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ações Rápidas"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etQuickSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridQuickActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:columnCount="2"
        app:rowCount="2"
        app:layout_constraintTop_toBottomOf="@id/tvQuickActionsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMap"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="12dp">
            <LinearLayout style="@style/QuickActionButtonStyle" tools:ignore="UseCompoundDrawables">
                <ImageView android:src="@drawable/ic_map_2d" style="@style/QuickActionButtonIconStyle"/>
                <TextView android:text="Mapa 2D" style="@style/QuickActionButtonTextStyle"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFavorites"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="12dp">
            <LinearLayout style="@style/QuickActionButtonStyle" tools:ignore="UseCompoundDrawables">
                <ImageView android:src="@drawable/ic_favorite" style="@style/QuickActionButtonIconStyle"/>
                <TextView android:text="Favoritos" style="@style/QuickActionButtonTextStyle"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardChatbot"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="12dp">
            <LinearLayout style="@style/QuickActionButtonStyle" tools:ignore="UseCompoundDrawables">
                <ImageView android:src="@drawable/ic_chat" style="@style/QuickActionButtonIconStyle"/>
                <TextView android:text="Chatbot" style="@style/QuickActionButtonTextStyle"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>