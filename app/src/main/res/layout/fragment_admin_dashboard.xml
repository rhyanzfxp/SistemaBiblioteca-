<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/lib_surface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_back"
        app:title="Painel Administrativo"
        app:titleCentered="true" />

    <LinearLayout
        android:id="@+id/cardBooks"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gerenciar Livros"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar / editar / remover" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardUsers"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gerenciar Usuários"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listar / bloquear / desbloquear" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardLoans"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empréstimos"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ativos, atrasados, devoluções" />
    </LinearLayout>

</LinearLayout>
