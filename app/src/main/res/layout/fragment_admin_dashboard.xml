<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lib_surface">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="112dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- =====================
                 HEADER (igual ao user)
                 ===================== -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_header_gradient">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_account_circle_24"
                        app:shapeAppearanceOverlay="@style/CircleImage"
                        android:background="@color/lib_surface"
                        android:padding="4dp"
                        />

                    <LinearLayout
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAppName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unifor Library - Admin"
                            android:textColor="@color/lib_white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvWelcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Olá, Admin."
                            android:textColor="@color/lib_white" />
                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:id="@+id/btnLogout"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_logout"
                        app:tint="@color/lib_white"
                        android:contentDescription="Sair"/>

                </LinearLayout>

            </FrameLayout>

            <!-- ==========================
                 PAINEL BRANCO (igual user)
                 ========================== -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_panel_round_top"
                android:paddingTop="32dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ações Administrativas"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"/>

                <!-- ============================
                     CHIPS DO ADMIN (OPÇÃO A)
                     pequeno, moderno, no estilo user
                     ============================ -->

                <!-- chip: acervo -->
                <LinearLayout
                    android:id="@+id/cardBooks"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_chip"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_books"
                        app:tint="@color/lib_primary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gestão de Acervo"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/lib_text_primary"/>
                </LinearLayout>

                <!-- chip: users -->
                <LinearLayout
                    android:id="@+id/cardUsers"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_chip"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_users"
                        app:tint="@color/lib_primary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gestão de Usuários"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/lib_text_primary"/>
                </LinearLayout>

                <!-- chip: empréstimos -->
                <LinearLayout
                    android:id="@+id/cardLoans"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_chip"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_loans"
                        app:tint="@color/lib_primary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gestão de Empréstimos"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/lib_text_primary"/>
                </LinearLayout>


                <!-- chip: renovações -->
                <LinearLayout
                    android:id="@+id/cardRenovacoes"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_chip"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_clock"
                        app:tint="@color/lib_primary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Renovações Pendentes"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/lib_text_primary"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
